        <div class="row" id="the-statistics">
            <div class="col-sm-12 text-center">
                <header>
                    <h1>The Statistics</h1>
                </header>

                <div class="row graphs">
                    <div class="graph-buttons">
                        <button class="btn btn-default" ng-click="selectGraph('graph1')">Graph 1</button>
                        <button class="btn btn-default" ng-click="selectGraph('graph2')">Graph 2</button>
                        <button class="btn btn-default" ng-click="selectGraph('graph3')">Graph 3</button>
                        <button class="btn btn-default" ng-click="selectGraph('graph4')">Graph 4</button>
                    </div>
                
                    <div ng-switch on="selectedGraph">
                      <div ng-switch-when="graph1">
                        <div class="graph1 text-center" ng-controller="graph1">
                              <div id="graph1" style="width:60%; height:600px; margin: 0 auto;"></div>
                          </div>
                      </div>

                      <div ng-switch-when="graph2">
                          <div class="graph2 text-center" ng-controller="graph2">
                              <div id="graph2" style="width:60%; height:400px; margin: 0 auto;"></div>
                          </div>
                      </div>
                      
                      <div ng-switch-when="graph3">
                        <div class="graph3 text-center" ng-controller="graph3">
                          <div id="graph3" style="width:80%; height:600px; background-color: white; margin: 0 auto;"></div>
                        </div>
                      </div>
                      
                      <div ng-switch-when="graph4">
                        <div class="graph4 text-center" ng-controller="graph4">
                            <div id="graph4" style="min-width: 310px; min-height: 700px; max-height: 900px; max-width: 800px; margin: 0 auto;"></div>
                        </div>
                      </div>
                    </div>  
                </div>

                <div class="col-sm-12 center-block">
                    <nav class="next-prev">
                        <a class="prev another-life col-sm-6" href="#another-life">Prev</a>
                        <a class="next video col-sm-6" href="#video">Next</a>
                    </nav>
                </div>
            </div>
        </div>

        <div class="row" id="video">
            <div class="col-sm-12 text-center">
                <div class="row video">
                    <div class="col-sm-12 text-center">
                        <iframe width="420" height="315" src="//www.youtube.com/embed/vqiBkZq_fmA?vq=large&autohide=0&controls=0&loop=1&playlist=vqiBkZq_fmA&fs=1&rel=0&autoplay=1&showinfo=0" frameborder="0" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 video-stat text-center ">
                <div ng-show="statistic">   
                    <div><h4>{{statistic}}</h4></div>
                </div>
            </div>

            <div class="col-sm-12 center-block">
                <nav class="next-prev">
                    <a class="prev the-statistics col-sm-6" href="#the-statistics">Prev</a>
                    <a class="next join-the-fight col-sm-6" href="#join-the-fight">Next</a>
                </nav>
            </div>
        </div>        
        
