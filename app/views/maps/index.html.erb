<h1>Listing maps</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Country</th>
      <th>Code</th>
      <th>Abbreviation</th>
      <th>Tier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maps.each do |map| %>
      <tr>
        <td><%= map.type %></td>
        <td><%= map.country %></td>
        <td><%= map.code %></td>
        <td><%= map.abbreviation %></td>
        <td><%= map.tier %></td>
        <td><%= link_to 'Show', map %></td>
        <td><%= link_to 'Edit', edit_map_path(map) %></td>
        <td><%= link_to 'Destroy', map, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Map', new_map_path %>
